:root {
  --bg: #0f172a;
  --primary: #3b82f6;
  --primary-dark: #1d4ed8;
  --accent: #ef4444;
  --danger: #ef4444;
  --text-main: #f1f5f9;
  --text-muted: #94a3b8;
  --card-bg: rgba(30, 41, 59, 0.7);
  --border: rgba(255, 255, 255, 0.1);
}

body {
  margin: 0;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  background-color: var(--bg);
  /* Global Blue-Red Gradient Background */
  background: linear-gradient(135deg, #0f172a 0%, #1e3a8a 30%, #7f1d1d 80%, #450a0a 100%);
  background-size: 200% 200%;
  animation: gradientFlow 15s ease infinite;
  color: var(--text-main);
  min-height: 100vh;
}

.app-root {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* App Header - Glassmorphism */
.app-header {
  background: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--text-main);
  padding: 0 2rem;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  top: 0;
  z-index: 50;
  transition: all 0.3s ease;
}

/* Landing View Styles */
.landing-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  width: 100%;
  margin: 0;
  text-align: center;
  padding: 4rem 2rem 2rem 2rem;
  /* Background handled by body now */
  background: transparent;
  color: #ffffff;
  position: relative; /* Changed from absolute to flow naturally */
  box-sizing: border-box;
}

/* Ensure body background is consistent */
body:has(.landing-container) {
  background-color: #0f172a;
  overflow-x: hidden;
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.landing-hero {
  max-width: 1000px;
  animation: fadeIn 0.8s ease-out;
  margin-bottom: 4rem;
  z-index: 10;
  position: relative;
}

/* Add a subtle glow behind the hero text */
.landing-hero::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  z-index: -1;
  pointer-events: none;
}

.landing-title {
  font-size: 5.5rem; /* Slightly larger */
  line-height: 1.05;
  font-weight: 800;
  margin-bottom: 1.5rem;
  color: #ffffff;
  letter-spacing: -0.04em;
  text-shadow: 0 0 40px rgba(255, 255, 255, 0.1); /* Soft glow on text */
}

.landing-highlight {
  /* Vibrant Gradient Text */
  background: linear-gradient(to right, #60a5fa, #f87171);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
  position: relative;
  /* Fix for clipped descenders (like 'g' or 'y') */
  padding-bottom: 0.1em;
  line-height: 1.2;
}

.landing-subtitle {
  font-size: 1.35rem;
  color: #94a3b8; /* Slate-400 for softer contrast */
  margin-bottom: 3rem;
  line-height: 1.6;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

/* --- Improved Header Scroll Effect --- */
.app-header.landing-header {
  background: transparent;
  backdrop-filter: none;
  border-bottom: 1px solid transparent;
  height: 80px;
  padding-top: 1rem;
  transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1); /* Smooth transition */
}

.app-header.landing-header.scrolled {
  background: rgba(0, 0, 0, 0.6); /* Semi-transparent black */
  backdrop-filter: blur(20px); /* Heavy blur for glass effect */
  border-bottom: 1px solid rgba(255, 255, 255, 0.08); /* Subtle border */
  height: 70px; /* Slightly compact on scroll */
  padding-top: 0;
}

.app-header.landing-header.scrolled .logo-nav-img {
  height: 40px; /* Shrink logo back to normal size */
}

/* Adjust nav tabs on scroll */
.app-header.landing-header.scrolled .app-nav-tab {
  font-size: 0.95rem;
  padding: 0.4rem 1rem;
  color: #e2e8f0;
}

.app-header.landing-header.scrolled .app-nav-tab:hover {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 9999px; /* Pill shape on hover when scrolled */
}

/* --- End Header Scroll Effect --- */

.landing-mockup-section {
  width: 100%;
  max-width: 1200px;
  perspective: 1000px;
  margin-bottom: 5rem;
  z-index: 10;
}

.landing-mockup-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 24px;
  padding: 2rem;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  transform: rotateX(10deg) scale(0.95);
  transition: transform 0.5s ease;
  position: relative;
  overflow: hidden;
}

.landing-mockup-card:hover {
  transform: rotateX(0deg) scale(1);
}

/* Abstract UI Elements for Mockup */
.mockup-header {
  height: 40px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  margin-bottom: 1.5rem;
  width: 30%;
}

.mockup-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
}

.mockup-col {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16px;
  height: 300px;
  padding: 1rem;
}

.mockup-item {
  height: 60px;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 8px;
  margin-bottom: 1rem;
}

.landing-features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  width: 100%;
  max-width: 1200px;
  margin-top: 2rem;
  margin-bottom: 4rem;
  z-index: 10;
}

.feature-card {
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.05);
  padding: 2rem;
  border-radius: 20px;
  text-align: left;
  transition: transform 0.3s ease, background 0.3s ease;
}

.feature-card:hover {
  transform: translateY(-5px);
  background: rgba(255, 255, 255, 0.05);
}

.feature-icon {
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, #3b82f6, #ef4444);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
}

.feature-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.75rem;
  color: #fff;
}

.feature-desc {
  color: #9ca3af;
  line-height: 1.6;
}

/* --- End New Sections --- */

.landing-actions {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
}

.landing-btn-primary {
  background: #ffffff;
  color: #000000;
  border: none;
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  font-weight: 700;
  border-radius: 9999px;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.landing-btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(255, 255, 255, 0.3);
}

.landing-btn-secondary {
  background: transparent;
  color: #ffffff;
  border: 1px solid #374151; /* Gray-700 */
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  border-radius: 9999px;
  cursor: pointer;
  transition: background-color 0.2s ease, border-color 0.2s ease;
}

.landing-btn-secondary:hover {
  background-color: rgba(255, 255, 255, 0.1);
  border-color: #ffffff;
}

/* Header Adjustments for Landing */
.app-header.landing-header {
  background: transparent;
  backdrop-filter: none;
  border-bottom: none;
  height: 80px; /* Taller header for landing */
  padding-top: 1rem;
}

/* --- Kanban Board Styles --- */
