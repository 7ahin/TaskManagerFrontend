  padding: 0;
  line-height: 1;
  opacity: 0;
  transition: opacity 0.2s;
}

.kanban-card:hover .card-action-btn.delete {
  opacity: 1;
}

.priority-tag {
  font-size: 0.7rem;
  padding: 0.1rem 0.4rem;
  border-radius: 4px;
  text-transform: uppercase;
  font-weight: 700;
  letter-spacing: 0.05em;
}

.priority-tag.low { background: rgba(16, 185, 129, 0.2); color: #34d399; }
.priority-tag.medium { background: rgba(59, 130, 246, 0.2); color: #60a5fa; }
.priority-tag.high { background: rgba(239, 68, 68, 0.2); color: #f87171; }

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
}
.status-dot.working { background: #3b82f6; box-shadow: 0 0 8px #3b82f6; }
.status-dot.done { background: #10b981; box-shadow: 0 0 8px #10b981; }

.board-controls {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.view-toggle {
  display: flex;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8px;
  padding: 2px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.view-btn {
  background: transparent;
  border: none;
  color: #94a3b8;
  padding: 0.4rem;
  border-radius: 6px;
